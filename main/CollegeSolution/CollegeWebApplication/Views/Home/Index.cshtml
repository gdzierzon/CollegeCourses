@model CollegeBusinessInterfaces.ICollege
@{
    ViewBag.Title = "Course Scheduler";
}
<div class="row">
    <div class="col-lg-12">
        <div class="page-header">
            <h1 id="forms">Course List</h1>
        </div>
    </div>
</div>
<div class="row">

    <div class="col-lg-4">
        <form class="form-horizontal" method="post" action="/">
            <fieldset>
                <legend>Add Courses</legend>

                <div class="well well-lg">
                    <div class="form-group">
                        <div class="col-lg-12">
                            <span class="help-block">Enter one course per line.</span>
                            <textarea class="form-control" rows="3" id="courses" name="courses"></textarea>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-lg-12">
                            <button type="reset" class="btn btn-default">Cancel</button>
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </div>
                    </div>

                </div>
            </fieldset>

        </form>


    </div>
    <div class="col-lg-8">
        <fieldset>
            <legend>Course Schedule</legend>

            <div class="col-lg-12">
                @if (ViewBag.ErrorMessage == null)
                {
                    <div class="alert alert-info">@Model.Schedule</div>
                }
                else
                {
                    <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
                }
            </div>
        </fieldset>
    </div>
</div>


